# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skoservice?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=skoservice
DB_SCHEMA=authenserver_service
DB_MAX_CONNECTIONS=100
DB_MIN_CONNECTIONS=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
PORT=8080
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000

# PASETO Authentication
PASETO_SECRET_KEY=your-32-byte-secret-key-replace-me-please-now
SESSION_DURATION=24h
REFRESH_TOKEN_DURATION=168h

# OAuth2 - Google
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/google/callback

# OAuth2 - GitHub
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/github/callback

# OAuth2 - Cloudflare
OAUTH_CLOUDFLARE_CLIENT_ID=your-cloudflare-client-id
OAUTH_CLOUDFLARE_CLIENT_SECRET=your-cloudflare-client-secret
OAUTH_CLOUDFLARE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/cloudflare/callback

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_DURATION=1m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring & Observability
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics
PPROF_ENABLED=true

# Swagger Documentation
SWAGGER_ENABLED=true
API_VERSION=2.0.0
API_TITLE=SAuthenServer API
API_DESCRIPTION=Authentication and Authorization Service with Go + Fiber

#
